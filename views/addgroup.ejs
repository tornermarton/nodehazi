<%- include('header') %>
<%- include('leftPanel') %>
<div class="col-md-9 contentbox-frame">
    <div class="contentbox">
        <h3>Új csoport létrehozása</h3>
        <div class="row">
            <form class="col-12" method="post" action="/groups/add" onsubmit="return addGroup();">
                <div class="form-group">
                    <label for="addGroupName">Csoport neve</label>
                    <input type="text" class="form-control" name="name" id="addGroupName">
                </div>
                <div class="form-group">
                    <label for="addGroupDescription">Csoport leírása</label>
                    <textarea class="form-control" name="description" id="addGroupDescription" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary float-right">Létrehozás</button>
            </form>
        </div>
    </div>
</div>
<%- include('footer') %>